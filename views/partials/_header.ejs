<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>

      <div class="collapse navbar-collapse form-group mb-2 justify-content-end">
        <% if (!email) { %>
          <form class="form-inline" action="/login" method="GET">
            <!--label for="userId">user name:</label>
            <input class="form-control" type="text" name="userId" value="" placeholder="username" style="width: 300px; margin: 1em"-->
            <button type="submit" class="btn btn-info">Login</button>&nbsp;
            <a class="nav-item nav-link btn btn-secondary" href="/registration">Register</a>
          </form>
        <% } %>

        <% if (email) { %>
          <form class="form-inline" action="/logout" method="POST">
            <input class="form-control" type="hidden" name="userId" value="<%= userId %>">
            Logged in as <%= email %>&nbsp;&nbsp;
            <button type="submit" class="btn btn-outline-dark">Log Out</button>
            <a class="nav-item nav-link btn btn-secondary" href="/registration">Profile</a>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>
<h3><p style="color:red;"> <%= alert %> </p></h3>